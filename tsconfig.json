{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"noEmit": true,
		"skipLibCheck": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"]
	},
	"include": ["src/**/*.ts", "src/**/*.svelte"]
}
